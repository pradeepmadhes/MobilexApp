<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/relativeLayout1">
        <EditText android:layout_height="wrap_content" android:id="@+id/editText_Section_ID" android:layout_alignParentLeft="true" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:singleLine="true" android:hint="Enter the Section"></EditText>
        <TextView android:layout_height="wrap_content" android:id="@+id/textView_Section_ID" android:layout_centerVertical="true" android:layout_toRightOf="@+id/editText_Section_ID" android:layout_width="wrap_content" android:textSize="20dp" android:padding="5dp" android:background="#ffffff" android:textColor="#000000"></TextView>
    </RelativeLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical">
        <ListView android:layout_height="wrap_content" android:id="@+id/listView_Section_ID" android:layout_width="fill_parent"></ListView>
    </LinearLayout>
</LinearLayout>
